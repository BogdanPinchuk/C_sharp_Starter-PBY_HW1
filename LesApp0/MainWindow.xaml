<Window x:Class="LesApp0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LesApp0"
        mc:Ignorable="d"
        Title="App by Bogdan Pinchuk" Height="189.6" Width="443.6">
    <Grid>
        <TextBox x:Name="tbInput" HorizontalAlignment="Left" 
                 Height="23" Margin="50,50,0,0" TextWrapping="Wrap" 
                 Text="Введіть щось" VerticalAlignment="Top" Width="120" TextAlignment="Center" ToolTip="Область введення даних"/>
        <TextBox x:Name="tbOutput" HorizontalAlignment="Right"
                 Height="23" Margin="0,50,50,0" TextWrapping="Wrap" 
                 Text="Результат вводу" VerticalAlignment="Top" Width="120" TextAlignment="Center" ToolTip="Область виведення даних" IsReadOnly="True"/>
        <Button x:Name="button" Content="Натисніть" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Center" Width="75" Click="Button_Click" ToolTip="При натисненні копіює дані"/>

    </Grid>
</Window>
